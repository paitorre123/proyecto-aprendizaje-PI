<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans   
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-3.1.xsd
">
<!-- creacion de la dependencia -->
<bean id="miInforme" class="cl.empleados.Informe"></bean>

<bean id="miEmpleado" class="cl.empleados.DirectorEmpleado">
	<constructor-arg ref="miInforme"></constructor-arg>
</bean>

<bean id="miSecretarioEmpleado" class="cl.empleados.SecretarioEmpleado" >
	<property name="informeNuevo" ref="miInforme"></property>
	<property name="email" value="secretariado@emanon.cl"></property>
	<property name="nombreEmpresa" value="Emanon"></property>
</bean>

</beans>